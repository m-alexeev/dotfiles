{
  "icon_theme": "Catppuccin Macchiato",
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 13,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Mirage"
  },
  "terminal": {
    "font_family": "Hack Nerd Font"
  },
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "schemaStore": {
            "enable": true
          },
          "completion": true,
          "schemas": {
            "kubernetes": "w2-platform-configuration/**/**.yaml",
            "https://www.schemastore.org/github-action.json": "**/.github/workflows/*.yaml"
          }
        }
      }
    }
  }
}
